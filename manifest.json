{
  "manifest_version": 3,
  "name": "Label Beep Extension",
  "version": "1.0",
  "description": "Beep when a label changes on the page.",
  
  "permissions": ["scripting", "tabs"],
  
  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
